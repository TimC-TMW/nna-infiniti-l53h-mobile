<!--[if gt IE 8]><!--> <html class="page-loading no-js"> <!--<![endif]-->
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<!-- seo -->
		<%= yield_content :seo %>

		<!-- meta -->
		<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">

		<!-- styles -->
		<%= stylesheet_link_tag 'application' %>
		<%= yield_content :pagecss %>        

		<!-- modernizr / font loader / soundmanager init -->
		<%= javascript_include_tag 'app/head_js' %>
		<script src="//ajax.googleapis.com/ajax/libs/webfont/1/webfont.js"></script>
        <%= javascript_include_tag 'libs/soundmanager/soundmanager_init' %>
		<link rel="shortcut icon" type="image/x-icon" href="<%= image_path 'common/favicon.ico' %>" />
	</head>
	<body<%= content_for?(:pageid)? " id='#{yield_content :pageid}'" : "" %>>
		<%= yield %>
		<%= javascript_include_tag 'app/libs' %>
		
		<script src="<%= asset_path :js,"nna.js?contextPath=#{asset_url I18n.t('context_path')}&jsDir=#{(http_prefix != '/') ? http_prefix : '/'}#{js_dir}/"%>"></script>
		<%= javascript_include_tag 'app/framework' %>
		<!-- page script -->
		<%= yield_content :pagescript %>
  
    <script type="text/javascript">
      var setOverSrc = function(){return null;}
    </script>
    <script type="text/javascript" src="<%= settings.ms_prefix %>/infinitihtml/js/crm/global.js"></script>
    <script src="<%= asset_path :js, "crm/engine.js" %>" id="crmEngine" pageid="<%= current_page.data.crmpageid ||= ""  %>" pagelocale="en" pagesite="infiniti" type="text/javascript"></script> 
	</body>
</html>