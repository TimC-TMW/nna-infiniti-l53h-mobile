<% content_for :pagecontent do %>
<section id="shield" class="wf">
	<article id="intro">
		<h1><%= I18n.t("safety_shield.intro.header") %></h1>
		<%= link_to I18n.t("safety_shield.intro.back.label"), I18n.t("safety_shield.intro.back.link"), :class=> "ss1", :query=>"chapter=safety-shield" %>
	</article>
	<article id="risk">
		<h2><%= I18n.t("safety_shield.risk.header") %></h2>
		<p><%= I18n.t("safety_shield.risk.tagline") %></p>
	</article>
	<article>
		<%= image_tag "technology/safety-shield/backup-collision-intervention.jpg", :width=>300 %>
		<h3><%= I18n.t("safety_shield.risk.back_collision.header") %></h3>
		<p><%= I18n.t("safety_shield.risk.back_collision.copy") %></p>
	</article>
	<article>
		<%= image_tag "technology/safety-shield/blind-spot-intervention.jpg", :width=>300 %>
		<h3><%= I18n.t("safety_shield.risk.blind_spot.header") %></h3>
		<p><%= I18n.t("safety_shield.risk.blind_spot.copy") %></p>
	</article>
	<article>
		<h3><%= I18n.t("safety_shield.risk.lane_depart.header") %></h3>
		<p><%= I18n.t("safety_shield.risk.lane_depart.copy") %></p>
	</article>
	<article class="last">
		<%= image_tag "technology/safety-shield/predictive-forward-collision-warning.jpg", :width=>300 %>
		<h3><%= I18n.t("safety_shield.risk.predict_collision.header") %></h3>
		<p><%= I18n.t("safety_shield.risk.predict_collision.copy") %></p>
	</article>
	<nav class="safety-shield">
		<ul>
			<li><%= link_to I18n.t("safety_shield.back.label"), I18n.t("technology.safetyshield.risk_n_appeared.link") %></li>
			<li><%= link_to I18n.t("safety_shield.safety-shield.label"), I18n.t("safety_shield.safety-shield.link"), :query=>"chapter=safety-shield" %></li>
			<li><%= link_to I18n.t("safety_shield.forward.label"), I18n.t("technology.safetyshield.collision_m_occur.link") %></li>
		</ul>
	</nav>
</section>
<% end %>

